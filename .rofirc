! ++++++++++++++++++++++++++++
! ROFI Settings              +
! Author: Akufoolz           +
! ++++++++++++++++++++++++++++

! Disable history
rofi.disable-history: true

! Hide scrollbar
rofi.hide-scrollbar: true

! Visible lines
rofi.lines: 8

! Width percentage
rofi.width: 32

! Border width
rofi.bw: 8

! Marching algorithm (normal, regex, glob, fuzzy)
rofi.matching: normal

! Default terminal
rofi.terminal: termite

! ++++++++++++++++++++++++++++
! ROFI "Dracula" Color Theme +
! Author: Akufoolz           +
! ++++++++++++++++++++++++++++

rofi.color-enabled: true

! Window: background, border, separator
rofi.color-window: #282a36, argb:AA44475a, #8be9fd

! Normal row: background, foreground, BG alt, highlight BG, highlight FG
rofi.color-normal: #282a36, #f8f8f2, #282a36, #44475a, #bd93f9

! Urgent row: background, foreground, BG alt, highlight BG, highlight FG
rofi.color-urgent: #282a36, #ff79c6, #282a36, #44475a, #bd93f9

! Active row: background, foreground, BG alt, highlight BG, highlight FG
rofi.color-active: #282a36, #50fa7b, #282a36, #44475a, #bd93f9

! Separator style 9non, dash, solid)
rofi.separator-style: solid
